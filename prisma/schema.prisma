generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  username     String   @unique
  passwordHash String
  sangkad      String
  onboarded    Boolean  @default(false)
  role         String   @default("not_approve") // "not_approve" | "user" | "admin"
  name         String?
  createdAt    DateTime @default(now())
}

enum Role {
  NOT_APPROVED
  USER
  ADMIN
  DEVELOPER
}